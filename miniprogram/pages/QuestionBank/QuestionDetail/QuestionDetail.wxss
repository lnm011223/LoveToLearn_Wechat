
.questionText{
  text-align: left;
  margin-top: 5rpx;
  line-height: 60rpx;
  font-size: 44rpx;
}
.questionBox{
  position: relative;
  margin: 0 auto;
  width: 630rpx;
  height: 200rpx;
  padding: 30rpx;
  background: #fff;
  border: solid 1px #c5c5c5;
  border-radius: 3px;
  box-shadow: 0 1px 2px #bebebe;
}
.img{
  width: 350px;
  /* margin-right: 8px; */
  /* vertical-align: middle; */
  margin:0 auto;
}
.button{
  min-height: 100rpx;
  text-align: left;
  margin-bottom: 20rpx;
  line-height: 90rpx;
  font-size: 42rpx;
  
  width: 80%;
  border-radius: 98rpx;
  box-shadow: 0 1px 2px #bebebe;
}
.input_panel{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;  
  width: 100%;
  height: 100%;
}
.input{
  position: relative;
  padding: 15rpx 34rpx;
  text-align: left;
  margin-bottom: 20rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  width: 340rpx;
  border-radius: 20rpx;
  box-shadow: 0 1px 2px #bebebe;
}
.leftButton{
  width: 240rpx;
  margin-left: 40rpx;
  margin-bottom: 40rpx;
  position: fixed;
  bottom: 0;
  background-color: #298DE5;
  box-shadow: 0 1px 2px #bebebe;
  border: solid 1px #ebebeb;
}
.leftButton text{
  color:#fff;
  font-weight: bold;
}
.rightButton{
  width: 240rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
  position: fixed;
  bottom: 0;
  right:0;
  background-color: #00FF7F;
  box-shadow: 0 1px 2px #bebebe;
  border: solid 2px #ebebeb;
  color:#fff;
}
.rightButton text{
  color:#fff;
  font-weight: bold;
}
.control{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 300rpx;
  display: flex;

}
.flex-container {
  background-color: #fff;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  width: 113rpx;
  height: 113rpx;
  overflow: hidden;
  border-radius: 100%;
  margin-bottom: 10rpx;
}

.username {
  font-size: 36rpx;
  color: #808085;
}

.view1 {
  height: 840rpx;
  align-self: stretch;
  /* background-color: red; */
  margin: auto 0;
     display: flex;
   /* align-items: center; */
  justify-content: center;
}

.view2 {
  height: 100vh;
  width: 50vh;

  /* background-color: black; */
}

.view3 {
  transition: 0.6s;
  transform-style: preserve-3d;
  padding: 15rpx 45rpx;
  /* background-color: green; */
}

.show-view {
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx 45rpx;
  width: 514rpx;
  height: 750rpx;
  background-color: #f3f3f3;
  background-size: 100%;
  overflow: hidden;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  box-shadow: 2rpx 4rpx 24rpx #686868;
  z-index: 2;
}


.title-text {
  font-size: 80rpx;
  color: #000000;
   margin-top:20rpx;
}
.content-text{
  font-size: 40rpx;
  color: #000000;
  margin-top:70rpx;
}



.authorize-button {
  margin: 30rpx;
  background-color: rgba(0, 0, 255, 0.336);
  background-color: #00FF7F;
  box-shadow: 0 1px 2px #bebebe;
  border: solid 2px #ebebeb;
}
.authorize-button text{
  color:#fff;
  font-weight: bold;
}

.outcomeView{
  
  border-bottom: 1px solid #686868;
    padding-bottom: 20rpx;
}
.outcomeLine{
  /* margin: 15rpx,15rpx; */

  padding-left:  15rpx;
  padding-right:  15rpx;
  margin-top: 15rpx;
  border-top: 3px solid #f1d533;
}

.noSelect{
  margin: 5rpx;
}
.rightSelect{
  background-color: rgba(94, 250, 94, 0.411);
}
.errorSelect{

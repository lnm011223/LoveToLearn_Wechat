/* components/sl-region-picker/index.wxss */
.root {
  position: relative;
}
.flexbox {
  display: flex;
  justify-content: center;
  flex-wrap: nowrap;
  width: 100%;
  align-items: center;
  box-sizing: border-box;
}
.flexbox .ceil {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  box-sizing: border-box;
  padding: 2.5%;
  margin: 0 2.5%;
  border-radius: 1em;
  box-shadow: inset 4px 4px 5px #f1f1f1, inset -4px -4px 5px #fff;
  color: #666;
  font-size: smaller;
}
/* components/sl-apply-ceil/index.wxss */
.apply-ceil {
  display: flex;
  position: relative;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 95%;
  box-sizing: border-box;
  margin:6.25% 2.5%;
  padding: 5% 5% 2.5% 5%;
  box-shadow: 4px 4px 5px #f1f1f1, -4px -4px 5px #fff;
  border-radius: 1em;
}
.apply-ceil .image {
  display: block;
  width: 20%;
  height: calc(95vw * 0.9 * 0.2);
  border-radius: 1em;
}
.apply-ceil .title {
  display: block;
  width: 75%;
  margin: 0 0 0 5%;
  font-size: smaller;
}
.apply-ceil .title view:nth-child(even) {
  margin: 5% 0 0 0;
  font-size: smaller;
  color: #888;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.apply-ceil .tool-bar {
  display: flex;
  position: relative;
  flex-direction: row-reverse;
  flex-wrap: nowrap;
  width: 100%;
  height: 60rpx;
  margin: 2.5% 0 0 0;
  border-radius: 2em;
  background: #f6f6f6;
  align-items: center;
  box-sizing: border-box;
  /* padding: 1.25% 2.5%; */
  font-size: x-small;
  color: #888;
}
.tool-bar .tag {
  position: absolute;
  left: 2.5%;
}
.tool-bar .button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 5%;
}
/* 取消条款 */
.cancel-contract {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 2.5%;
  justify-content: space-evenly;
  align-items: center;
  border-radius: 1em;
}
.cancel-contract .ceil {
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  width: 90%;
  margin: 2.5% 5%;
  box-sizing: border-box;
  padding: 2.5%;
  color: #666;
  background: #0066ff11;
  border: 2px #0066ff33 solid;
  border-radius: 1em;
}
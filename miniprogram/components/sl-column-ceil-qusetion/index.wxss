.ceil {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  position: relative;
  box-sizing: border-box;
  transition: all 0.25s;
}
.ceil[data-id = "1"] {
  /* 被点击时触发 */
  transform: scale3d(1.05, 1.05, 1.05);
  color: #666;
  transition: all 0.25s;
}
.ceil::after {
  content: '';
  position: absolute;
  width: 95%;
  /* height: 5rpx; */
  border-radius: 2em;
  border-bottom: 5rpx #f1f1f1 dashed;
  bottom: -5%;
}
.ceil .title {
  display: flex;
  flex-wrap: wrap;
  font-size: smaller;
  word-break: break-all;
  box-sizing: border-box;
  width: 100%;
  height: 90%;
  overflow-y: scroll;
  line-height: 150%;
}
.ceil .title::-webkit-scrollbar {
  width: 0%;
  height: 0%;
}
.ceil .picture {
  position: relative;
  width: 37.5%;
  height: 110%;
  border-radius: .75em;
  /* margin: 0 0 2.5% 0; */
}
.ceil .end-time {
  display: flex;
  position: relative;
  letter-spacing: 0px;
  align-items: center;
  flex-wrap: nowrap;
  width: 100%;
  height: 10%;
  box-sizing: border-box;
  padding: 0;
  font-size: small;
  bottom: 0%;
  left: 0%;
}
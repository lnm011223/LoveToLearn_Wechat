/* components/sl-button-2/index.wxss */
.btn {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  border-radius: 0.75em;
  padding: 2.5% 10%;
  border-width: 2px;
  border-style: solid;
  transition: all 0.25s;
}
.btn[data-id = "1"]  {
  filter: hue-rotate(-15deg);
  transform: scale3d(1.05, 1.05, 1.05);
  transition: all 0.25s;
}